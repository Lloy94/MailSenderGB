<Window x:Class="MailSender.ErrorMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="ErrorMessage" Height="200" Width="400">
    <Grid>
        <TextBlock x:Name="errorMsg" HorizontalAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" FontSize="20" Foreground="#FFF11F1F"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="175,128,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
